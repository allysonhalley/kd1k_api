{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
      "builder": "NIXPACKS",
      "buildCommand": "bundle exec rails assets:precompile"
    },
    "deploy": {
      "numReplicas": 1,
      "startCommand": "bundle exec rails server -b 0.0.0.0",
      "restartPolicyType": "ON_FAILURE",
      "restartPolicyMaxRetries": 10
    }
  }